<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:orientation="vertical"
    android:id="@+id/my_filters_item_container">

    <TextView
        android:id="@+id/gym_stuff_item_name"
        android:textColor="@color/title"
        android:text="Example name"
        android:textSize="24dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/gym_stuff_item_desc"
        android:textColor="@color/title"
        android:layout_below="@id/gym_stuff_item_name"
        android:text="Example description"
        android:textSize="24dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/gym_stuff_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

</RelativeLayout>