<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/gym_preview_container"
    android:layout_height="150dp"
    android:clickable="true">

    <TextView
        android:id="@+id/gym_preview_name"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:text="Am besten gym"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/gym_preview_address"
        android:text="Brno Ulica 156"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="16dp"
        android:layout_alignBottom="@+id/gym_preview_name" />


    <TextView
        android:id="@+id/gym_preview_rating_text"
        android:text="3.5"
        android:layout_below="@+id/gym_preview_name"
        android:paddingLeft="32dp"
        android:paddingTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_toRightOf="@+id/gym_preview_rating_text"
        android:layout_alignBottom="@+id/gym_preview_rating_text"
        android:paddingLeft="5dp"
        android:src="@drawable/ic_star_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/gym_preview_image"
        android:src="@drawable/image_preview"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="180dp"
        android:layout_height="90dp" />

</RelativeLayout>